        <!-- Contact section-->
        <div class="bg-light py-5">
            <div class="container px-5 my-5 px-5">
                <div class="text-center mb-5">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                    <h2 class="fw-bolder">Registration</h2>
                    <p class="lead mb-0">Please, enter your informations</p>
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-6">
                        <form name="contactForm" action="/registration" enctype="application/x-www-form-urlencoded" method="post">
                        <div"container bg-light">
                            <!-- Name input-->
                            <div class="form-floating mb-3">
                                <label for="firstname">First name</label>
                                <input class="form-control" id="firstname" name = "firstname" type="text" placeholder="Enter your first name..." value="{{data.firstName}}" autofocus="" />
                                {{#unless data.firstName}}
                                 <div style="color:red;">
                                  Please, enter your first name.
                                </div>
                              {{/unless}}
                            </div>
                            <!--Last Name input-->
                            <div class="form-floating mb-3">
                                <label for="lastname">Last name</label>
                                <input class="form-control" id="lastname" name = "lastname" type="text" placeholder="Enter your last name..." value="{{data.lastName}}" autofocus="" />
                                {{#unless data.lastName}}
                                <div style="color:red;">
                                 Please, enter your last name.
                                </div>
                              {{/unless}}
                            </div>
                            <!-- Email address input-->
                            <div class="form-floating mb-3">
                                <label for="email">email address</label>
                                <input class="form-control" id="email" name = "email" type="email" placeholder="Enter your email address..." value="{{data.email}}" autofocus="" />
                                {{#unless data.email}}
                               <div style="color:red;">
                                 Please, enter your email.
                                </div>
                                {{/unless}}
                            </div>
                            <!-- Password input-->
                            <div class="form-floating mb-3">
                                    <label for="password">password</label>
                                    <input class="form-control" id="pw" name = "pw" type="password" placeholder="Enter your password..." value="{{data.password}}" autofocus="" />
                                {{#unless data.pw}}
                                 <div style="color:red;">
                                 Please, enter your password.
                                </div>
                                {{/unless}}
                                {{#if data.expressionP}}
                                    <div style="color:red;">
                                     enter your password 6-10 and make sure to include letters more than one.
                                     </div>
                                     {{/if}}
                            </div>
                             <!-- Password verification input-->
                             <div class="form-floating mb-3">
                                <label for="reEntPassword">re-enter password</label>
                                <input class="form-control" id="reEntPassword" name = "reEntPassword" type="password" placeholder="Enter your password again..." value="{{data.reEntPw}}" autofocus="" />
                                {{#unless data.reEntPassword}}
                                 <div style="color:red;">
                                 Please, enter your password.
                                </div>
                                {{/unless}}
                                {{#unless data.reEntPassword}}
                                 <div style="color:red;">
                                 Please, enter correct password.
                                </div>
                                {{/unless}}
                             </div>  
                              <!-- Phone verification input-->
                              <div class="form-floating mb-3">
                                <label for="phoneNum">phone number</label>
                                <input class="form-control" id="phoneNum" name = "phoneNum" type="tel" placeholder="Enter your phoneNum..." value="{{data.phoneNumber}}" autofocus="" />
                                {{#unless data.phoneNum}}
                                 <div style="color:red;">
                                 Please, enter your phone number.
                                </div>
                                {{/unless}}
                                {{#if data.expressionPN}}
                                <div style="color:red;">
                                     enter your valid phone number.
                                </div>
                            {{/if}}
                             </div>   
                            <!-- Submit Button-->
                           <div class="d-grid"><button class="btn btn-primary" id="submitButton" type="submit">Submit</button></div>
                    </div>
                </div>
            </div>
        </div>
        </div>
            </form>
